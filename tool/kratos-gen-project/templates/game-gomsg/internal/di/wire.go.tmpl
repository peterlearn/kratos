package di

import (
	pb "{{.ModPrefix}}{{.Name}}/api"
	"{{.ModPrefix}}{{.Name}}/internal/dao"
	"{{.ModPrefix}}{{.Name}}/internal/server/http"
	"{{.ModPrefix}}{{.Name}}/internal/server/websocket"
	"{{.ModPrefix}}{{.Name}}/internal/service"

	"github.com/google/wire"
)

var daoProvider = wire.NewSet(dao.New, dao.NewRedis)
var serviceProvider = wire.NewSet(service.New, wire.Bind(new(pb.DemoGoMsgServer), new(*service.Service)),
	wire.Bind(new(pb.DemoGinServer), new(*service.Service)))

func InitApp() (*App, func(), error) {
	panic(wire.Build(daoProvider, serviceProvider, http.New, websocket.New, NewApp))
}
